{
    "name": "samrook/reqres-client",
    "description": "A client to add and fetch users via the ReqRes API.",
    "type": "library",
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "phpstan/phpstan": "^2.1",
        "symfony/polyfill-iconv": "^1.33",
        "friendsofphp/php-cs-fixer": "^3.90"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "analyse": "vendor/bin/phpstan analyse",
        "lint": "vendor/bin/php-cs-fixer fix --allow-risky=yes --dry-run --diff",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "check": [
            "@test",
            "@analyse",
            "@lint"
        ]
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SamRook\\ReqResClient\\": "src/",
            "SamRook\\ReqResClient\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sam Rook",
            "email": "samr2411@gmail.com"
        }
    ]
}
